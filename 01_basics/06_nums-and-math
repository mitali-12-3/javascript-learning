//////////////////NUMS///////////////////
const score=400
console.log(typeof score)//number

const balance= new Number(100)
console.log(balance); //[Number: 100]

console.log(typeof balance.toString()) //string
console.log(balance.toFixed(2))//precision value for ecommerce application

const a= 1123.8966
const b=23.8966
const c=123.8966
console.log(a.toPrecision(3));//1.12e+3
console.log(b.toPrecision(3));//23.9
console.log(c.toPrecision(3));//124

const hundreds=1000000
console.log(hundreds.toLocaleString()) //by default US Standards
console.log(hundreds.toLocaleString('en-IN'))

