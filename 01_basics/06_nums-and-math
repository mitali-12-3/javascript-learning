// console.log(Math.floor(4.2)) //4
// console.log(Math.min(4,9,2,6))
// console.log(Math.max(4,9,2,6))
console.log(Math.random()) //betweenn 0 to 1
console.log(Math.random()*10) //between 0 to 10
console.log((Math.random()*10) +1) //between 1 to 10

console.log(Math.floor((Math.random()*10)+1)) 
//get rid of 0.decimal,we use floor
//to include 10, we use +1

console.log(Math.floor((Math.random()*6)+1))  
//dice game: between 0 to 6 

const min=10
const max= 20
console.log(Math.floor(Math.random()*(max-min + 1))+min)
//max-min to get range 10+1
//floor to avoid decimal
